{
  "name": "opineeo-widget",
  "version": "1.0.0",
  "description": "The simplest survey widget for Devs and Founders.",
  "type": "module",
  "main": "./dist/opineeo-widget.umd.cjs",
  "module": "./dist/opineeo-widget.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/opineeo-widget.js",
      "require": "./dist/opineeo-widget.umd.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "prepublishOnly": "npm run build",
    "build-widget": "node survey-render/minify-widget.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rafamessias/opineeo-widget.git"
  },
  "keywords": [
    "survey",
    "widget",
    "react",
    "component",
    "feedback",
    "opineeo"
  ],
  "author": "Rafael Messias",
  "license": "SEE LICENSE IN LICENSE.txt",
  "bugs": {
    "url": "https://github.com/rafamessias/opineeo-widget/issues"
  },
  "homepage": "https://github.com/rafamessias/opineeo-widget#readme",
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.7.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "postcss": "^8.4.38",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.4",
    "terser": "^5.44.0",
    "typescript": "^5.2.2",
    "vite": "^5.3.1",
    "vite-plugin-dts": "^3.9.1"
  }
